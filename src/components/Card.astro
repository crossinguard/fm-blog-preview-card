---
import Image from 'astro/components/Image.astro';
import blogImg from '../assets/illustration-article.svg';
import authorImg from '../assets/image-avatar.webp';
---

<div class="card">
  <Image src={blogImg} alt="" height="200" class="blog-image" />
  <div class="info">
    <p class="category">Learning</p>
    <p class="pubdate">Published 21 Dec 2023</p>
    <h2 class="title">HTML &amp; CSS foundations</h2>
    <p class="description">
      These languages are the backbone of every website, defining structure,
      content, and presentation.
    </p>
  </div>
  <div class="author">
    <Image src={authorImg} alt="" height="32" />
    <p class="author-name">Greg Hooper</p>
  </div>
</div>

<style>
  .card {
    background-color: var(--white);
    border: 1px solid var(--black);
    filter: drop-shadow(0.5rem 0.5rem var(--black));
    font-size: var(--font-size);
    border-radius: 1.25rem;
    max-width: 384px;
    padding: 1.5rem;
    transition: filter 0.2s ease-in;
  }
  .card:hover {
    filter: drop-shadow(1rem 1rem);
    .title {
      color: var(--yellow);
    }
  }
  .blog-image {
    border-radius: 0.625rem;
  }
  .title {
    transition: color 0.2s ease-in;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-block: 1.5rem;
  }
  .category {
    width: fit-content;
    font-size: 0.875rem;
    font-weight: 800;
    padding: 0.25rem 0.75rem;
    background-color: var(--yellow);
    border-radius: 0.25rem;
  }
  .description {
    color: var(--grey);
  }
  .author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
</style>
